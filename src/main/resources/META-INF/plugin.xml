<idea-plugin>
    <id>ask.me.again.shortcut.additions</id>
    <name>Shortcut Additions</name>
    <version>2.1</version>
    <vendor email="lol@lol.de" url="nowebsite.com">AskMeAgain</vendor>

    <description>
        <![CDATA[
            This plugin introduces new Intellij Shortucts and aims to speed up development of tests:
             * Introduce Mocks To Variable
             * Introduce Mocks To Field
             * Add Mock Method
        ]]>
    </description>
    <change-notes>
        <![CDATA[
            * More Bugfixes
            * Added Add Mock Method Action
        ]]>
    </change-notes>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html for description -->
    <idea-version since-build="203.0"/>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="ShortcutAdditions" text="Additional Refactorings" popup="true">
            <add-to-group group-id="RefactoringMenu"
                          anchor="after"
                          relative-to-action="ask.me.again.shortcut.additions.introducemock.variable"/>
            <action id="ask.me.again.shortcut.additions.introducemock.variable"
                    class="ask.me.again.shortcut.additions.introducemock.actions.IntroduceMockToVariable"
                    text="Introduce Mock To Variable"
                    description="Introduce all Mocks">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl m" second-keystroke="ctrl v"/>
            </action>
            <action id="ask.me.again.shortcut.additions.introducemock.field"
                    class="ask.me.again.shortcut.additions.introducemock.actions.IntroduceMockToField"
                    text="Introduce Mock To Field"
                    description="Introduce all Mocks">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl m" second-keystroke="ctrl f"/>
            </action>
            <action id="ask.me.again.shortcut.additions.addmockmethod"
                    class="ask.me.again.shortcut.additions.addmockmethod.AddMockMethodImpl"
                    text="Add Mock Method"
                    description="Add Mock Method">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl m" second-keystroke="ctrl m"/>
            </action>
        </group>
    </actions>

</idea-plugin>